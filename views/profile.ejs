<%- include('html'); -%>
<body id="app" class="bg-white dark:bg-neutral-900">
    <div class="aft-loader"></div>
    <div class="loader"></div>
    <script type="text/javascript">
      $(window).on('load', function() {
        $(".loader").fadeOut("slow");
        $(".aft-loader").fadeOut("slow");
      });
    </script>
      <%- include('header'); -%>
      <section class="text-gray-600 body-font">
        <div class="container px-5 mx-auto flex flex-col ">
            <div class="lg:w-4/6 mx-auto">
                <div class="flex flex-col sm:flex-row mt-10">
                    <div class="sm:w-1/3 text-center sm:pr-8 sm:py-8">
                        <div class="w-20 h-20 rounded-full inline-flex items-center justify-center bg-gray-200 text-gray-400">
                            <img src="https://www.hellhades.tk/uploads/<%= image %>.png" alt="profile_image" class="rounded-full scale-110 hover:scale-125 transition" />
                        </div>
                        <div class="flex flex-col items-center text-center justify-center">
                            <h2 class="font-medium title-font mt-4 text-white text-lg"><%= user %></h2>
                            <div class="w-12 h-1 bg-indigo-500 rounded mt-2 mb-4"></div>
                            <p class="text-base"><%= rank %></p>
                        </div>
                    </div>
                    <div class="sm:w-2/3 sm:pl-8 sm:py-8 sm:border-l border-gray-200 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left">
                        <div class="container mx-auto flex flex-wrap items-center">
                            <div class="w-full bg-gray-800 bg-opacity-50 rounded-lg p-8 flex flex-col md:ml-auto mt-10 md:mt-0">
                                <h2 class="text-white text-lg font-medium title-font">Settings</h2>
                                <form class="py-4 mt-2" enctype="multipart/form-data" action="upload" method="POST">
                                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" for="file_input">Update profile picture</label>
                                    <input type="file" name="fileToUpload" id="fileToUpload" class="block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" required/>
                                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">SVG, PNG, JPG or GIF (MAX. 800x400px).</p>
                                    <input type="submit" value="Upload Image" name="submit" class="text-white bg-indigo-500 border-0 px-4 mt-2 focus:outline-none hover:bg-indigo-600 rounded" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('footer'); -%>
</body>